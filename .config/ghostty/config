# Theme
theme = TokyoNight 

# Window settings 
background-opacity = 0.9
window-decoration = true 
window-theme = ghostty
mouse-hide-while-typing = true

# Updates
auto-update = check
auto-update-channel = stable

# Keybinds
keybind = alt+ctrl+y=reload_config
macos-option-as-alt = left

# Clipboard
keybind = alt+c=copy_to_clipboard
keybind = alt+v=paste_from_clipboard

# Font
# font-family = Iosevka Nerd Font
font-family = JetBrainsMono Nerd Font Mono
font-size = 20
keybind = alt+plus=increase_font_size:1
keybind = alt+minus=decrease_font_size:1
keybind = alt+0=reset_font_size

# Scroll
keybind = ctrl+shift+up=scroll_page_lines:-1
keybind = ctrl+shift+down=scroll_page_lines:1
keybind = ctrl+shift+8=scroll_page_lines:-10
keybind = ctrl+shift+7=scroll_page_lines:10

# Window/Tab navigation
keybind = alt+n=new_window
keybind = alt+t=new_tab
keybind = ctrl+shift+w=close_tab
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab

# Splits
keybind = ctrl+shift+v=new_split:right
keybind = ctrl+shift+h=new_split:down
keybind = ctrl+left=goto_split:left
keybind = ctrl+right=goto_split:right
keybind = ctrl+up=goto_split:top
keybind = ctrl+down=goto_split:bottom
keybind = ctrl+shift+e=equalize_splits
keybind = ctrl+f=toggle_split_zoom 

# Misc
keybind = global:cmd+-=toggle_quick_terminal
